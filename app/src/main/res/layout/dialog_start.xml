<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <View
        android:id="@+id/dialog_outside"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparence"
        android:clipChildren="false" />

    <ImageView
        android:id="@+id/splash_iv"
        android:layout_width="@dimen/dp_128"
        android:layout_height="@dimen/dp_128"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_countdown" />

    <TextView
        android:id="@+id/countdown_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="3"
        android:textColor="@color/fc_fff"
        android:textSize="@dimen/sp_84" />
</RelativeLayout>